<div class="container mt-5">
  <div class="border-bottom pb-2">
    <%= image_tag "#{current_user.sign.downcase}.svg", alt: "" %>
    <div class="d-flex">
      <p>
        <span class="me-1">☉</i></span>
        <span class="me-2"><%= current_user.sign.capitalize %></span>
      </p>
      <p>
        <span class="me-1">↑</span>
        <span class="me-2"><%= current_user.rising.capitalize %></span>
      </p>
      <p>
        <span class="me-1">☽</span>
        <span class="me-2"><%= current_user.moon.capitalize %></span>
      </p>
    </div>
  </div>

  <% personnality_report = eval(current_user.personality_report).join.to_s.split(".") %>
  <%# Carousel text %>
  <br>
  <div id="carouselText" class="carousel carousel-dark slide" data-bs-ride="true">
    <div class="carousel-indicators">
      <% personnality_report.each_with_index do |element, i| %>
        <button type="button" data-bs-target="#carouselText" data-bs-slide-to="<%= i %>" class=<%= "active" if i.zero? %> aria-current=<%= "true" if i.zero? %> aria-label="Slide <%= i + 1 %>"></button>
      <% end %>
    </div>
    <div class="carousel-inner">
      <% personnality_report.each_with_index do |element, i| %>
        <div class="carousel-item <%= 'active' if i.zero? %>">
          <div class="sign-text">
            <p>
              <%= element %>.
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="empty-row">
  </div>

</div>

