<div class="container pb-5">
  <div>
    <div class="sign-profile-image">
      <%= image_tag "#{current_user.sign.downcase}.svg", alt: "" %>
    </div>

    <%# <div class="d-flex border-bottom justify-content-center mb-0 pb-0"> %>
      <%# <p> %>
        <%# <span class="me-1">☉</i></span> %>
        <%# <span class="me-2">= current_user.sign.capitalize</span> %>
      <%# </p> %>
      <%# <p> %>
