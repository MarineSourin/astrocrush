<div class="card-carousel" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @mate.photos.first.key, height: 450, crop: :fill %>')">
</div>

<div class="p-2">
  <h1>
    <strong><%= @mate.username %></strong>
    <span>30</span>
  </h1>

  <div class="d-flex">
    <span class="me-1"><i class="fas fa-sun"></i></span>
    <span class="me-2"><%= @mate.star_sign.capitalize %></span>

    <span class="me-1"><i class="fas fa-arrow-up"></i></i></span>
    <span class="me-2"><%= @mate.rising.capitalize %></span>

    <span class="me-1"><i class="far fa-moon"></i></i></span>
    <span class="me-2"><%= @mate.moon.capitalize %></span>
  </div>

  <div class="mt-3">
    <p class="mb-1">
      <strong>A propos de moi</strong>
    </p>
    <p>
      <%= @mate.description %>
    </p>
  </div>

   <div class="mt-3">
    <p class="mb-1">
      <strong>Mes passions</strong>
    </p>
    <p>
      <%= @mate.hobbies %>
    </p>
  </div>

   <div class="mt-3">
    <p class="mb-1">
      <strong>Ce que les planètes révèlent sur moi...</strong>
    </p>
    <p>
      A compléter...
    </p>
  </div>
</div>
